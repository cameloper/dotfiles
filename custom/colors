CC_WHITE=#FFFFFF
CC_PALE_GREY=#E1E3E5
CC_SLATE_GREY=#707880
CC_DARK_GREY=#474747
CC_ALMOST_BLACK=#1E1E1E
CC_PALE_TEAL=#8ABEB7
CC_DUSTY_RED=#A54242

if [[ $THEME_MODE = "dark" ]]; then
  export CCS_BACKGROUND=$CC_ALMOST_BLACK 
  export CCS_BACKGROUND_ALT=$CC_DARK_GREY&
  export CCS_PRIMARY=$CC_PALE_GREY
  export CCS_SECONDARY=$CC_SLATE_GREY
  export CCS_ALERT=$CC_DUSTY_RED
  export CCS_DISABLED=$CC_DARK_GREY
  export WALLPAPER="~/wallpaper-dark.png"
fi
if [[ $THEME_MODE = "light" ]]; then
  export CCS_BACKGROUND=$CC_WHITE
  export CCS_BACKGROUND_ALT=$CC_PALE_GREY
  export CCS_PRIMARY=$CC_ALMOST_BLACK
  export CCS_SECONDARY=$CC_PALE_TEAL
  export CCS_ALERT=$CC_DUSTY_RED
  export CCS_DISABLED=$CC_SLATE_GREY
  export WALLPAPER="~/wallpaper.png"
fi

